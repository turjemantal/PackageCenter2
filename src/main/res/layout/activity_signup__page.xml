<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup_Page"
    android:background="@drawable/background_first_screen"
    android:orientation="vertical"
    android:gravity="center"
    >


    <EditText
        android:id="@+id/firstname_edit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="First name"
        android:inputType="text"
        android:textColorHint="@color/colorgray2"
        />
    <EditText
        android:id="@+id/lastname_edit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Last name"
        android:inputType="text"
        android:textColorHint="@color/colorgray2"

        />


    <EditText
        android:id="@+id/username_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="User name"
        android:inputType="text"
        android:textColorHint="@color/colorgray2"

        />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/password_editTxt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/colorgray2"

        />

    <EditText
        android:id="@+id/maileditText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/colorgray2"

        />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/button_of_Signup"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textColor="#072540"

        android:background="@drawable/button_create"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>


    <TextView
        android:id="@+id/text_correct"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="13dp"
        android:textColor="@color/colorgray2"
        />


</LinearLayout>