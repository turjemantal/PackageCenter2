<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_Adds"
    android:background="@drawable/screen_three"
    android:orientation="vertical"
    android:gravity="center">


        <EditText
            android:id="@+id/name_editTxt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Doctor's name"
            android:inputType="text"
            android:textColor="@color/colorgray2"
            android:textColorHint="@color/colorgray2"/>


    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/id_editTxt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Doctor/Clinic ID"
        android:inputType="text"
        android:textColor="@color/colorgray2"
        android:textColorHint="@color/colorgray2"/>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/button_of_add"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Add"
        android:textColor="#072540"

        android:background="@drawable/button_create"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>

    <TextView
        android:id="@+id/textShowDoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="@color/colorgray2"
        android:textColorHint="@color/colorgray2"
        />


</LinearLayout>