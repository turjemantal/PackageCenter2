<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_show_shcudule"
    android:background="@drawable/screen_three"
    android:orientation="vertical"
    android:gravity="center">




    <Spinner
        android:id="@+id/spinner_User_show"
        android:layout_width="wrap_content"
        android:prompt="@string/User"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"></Spinner>


    <EditText
        android:id="@+id/date_picker_txt_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Date"
        android:layout_marginBottom="25dp"
        />


    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Show"
        android:textSize="16dp"
        android:id="@+id/show_list_shcudule"
        android:layout_marginBottom="20dp"
        android:textColor="#072540"

        android:background="@drawable/button_create"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />





</LinearLayout>